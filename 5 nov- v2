import cv2
import mediapipe as mp
import lgpio
import time

# ===== GPIO SETUP =====
CHIP = 0
PIN = 27
h = lgpio.gpiochip_open(CHIP)
lgpio.gpio_claim_output(h, PIN)

# ===== MEDIAPIPE SETUP =====
mp_pose = mp.solutions.pose
pose = mp_pose.Pose(
    min_detection_confidence=0.7,  # higher precision
    min_tracking_confidence=0.7,
    model_complexity=1             # slightly heavier, more accurate
)
mp_drawing = mp.solutions.drawing_utils

# ===== CAMERA SETUP =====
cap = cv2.VideoCapture(0, cv2.CAP_V4L2)
cap.set(cv2.CAP_PROP_BUFFERSIZE, 1)
cap.set(cv2.CAP_PROP_FPS, 30)
cap.set(cv2.CAP_PROP_FRAME_WIDTH, 640)
cap.set(cv2.CAP_PROP_FRAME_HEIGHT, 480)

print("✅ Camera initialized")

# ===== MAIN LOOP =====
try:
    while True:
        ret, frame = cap.read()
        if not ret:
            print("❌ Failed to grab frame")
            break

        rgb_frame = cv2.cvtColor(frame, cv2.COLOR_BGR2RGB)
        results = pose.process(rgb_frame)

        human_detected = False

        if results.pose_landmarks:
            # Filter by visible landmarks
            landmarks = results.pose_landmarks.landmark
            visible_points = [lm for lm in landmarks if lm.visibility > 0.6]

            # Require at least 15 visible joints and a confident nose position
            if len(visible_points) > 15 and landmarks[0].visibility > 0.7:
                human_detected = True
                mp_drawing.draw_landmarks(
                    frame, results.pose_landmarks, mp_pose.POSE_CONNECTIONS)
                cv2.putText(frame, "Human Detected", (20, 50),
                            cv2.FONT_HERSHEY_SIMPLEX, 1, (0, 255, 0), 2)
            else:
                cv2.putText(frame, "No Human", (20, 50),
                            cv2.FONT_HERSHEY_SIMPLEX, 1, (0, 0, 255), 2)
        else:
            cv2.putText(frame, "No Human", (20, 50),
                        cv2.FONT_HERSHEY_SIMPLEX, 1, (0, 0, 255), 2)

        # GPIO Output
        lgpio.gpio_write(h, PIN, 1 if human_detected else 0)

        # Display
        cv2.imshow("Human Detection", frame)

        if cv2.waitKey(1) & 0xFF == 27:  # ESC to quit
            break

finally:
    lgpio.gpio_write(h, PIN, 0)
    lgpio.gpiochip_close(h)
    cap.release()
    cv2.destroyAllWindows()
    print("✅ Clean exit")
s
